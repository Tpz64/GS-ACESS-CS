<Window x:Class="ACESS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - A.C.E.S.S." Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="White">

    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <!-- Logo -->
            <Border Width="100" Height="100" CornerRadius="50" BorderBrush="#2E7D32" BorderThickness="3" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="M" FontSize="40" FontWeight="Bold" Foreground="#0D47A1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <TextBlock Text="A.C.E.S.S. Tutor" FontSize="24" FontWeight="Bold" Foreground="#0D47A1" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Campos -->
            <TextBlock Text="Usuário" Foreground="#0D47A1" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUser" Height="35" Padding="5" FontSize="14" BorderBrush="#E0E0E0" BorderThickness="2"/>

            <TextBlock Text="Senha" Foreground="#0D47A1" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <PasswordBox x:Name="txtPass" Height="35" Padding="5" BorderBrush="#E0E0E0" BorderThickness="2"/>

            <!-- Botão -->
            <Button Content="ENTRAR NO SISTEMA" Click="BtnLogin_Click" Height="45" Margin="0,30,0,0" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
 